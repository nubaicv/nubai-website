{% extends 'partials/_master.twig' %}

{% block title %}
    {% trans%}my.profile.page.title{% endtrans %}
{% endblock %}

{% block main %}

    <h1>{% trans %}my.profile{% endtrans %}</h1>
    <div class="w3-row">
        <div class="w3-quarter" id="profile-photo-wrapper">
            <img src="{{ asset('icon-profile.png', 'files')  }}" alt="profile-photo" class="w3-border w3-padding w3-image" id="profile-photo">
            <div>
                <button>{% trans %}button.change.profile.photo{% endtrans %}</button>
            </div>
        </div>
        <div class="w3-threequarter">
            <img src="{{ asset('GettyImages-1285126883-scaled.jpg', 'files')  }}" alt="photo-to-crop" class="w3-border w3-padding w3-image" id="photo-to-crop">
            <div>
                <button id="button-crop">{% trans %}button.crop{% endtrans %}</button>
            </div>
        </div>
    </div>

    <script type="text/javascript" src="{{ asset('js/nubai_cropper.js') }}"></script>

{% endblock %}
